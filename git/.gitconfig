[user]
	name = Frank Hock
	email = frank.hock@gmail.com

[color]
	ui = auto

[core]
	editor = zed --wait
	pager = less -FRX

[diff]
	algorithm = histogram

[fetch]
	prune = true

[init]
	defaultBranch = main

[merge]
	conflictstyle = diff3

[pull]
	rebase = true

[push]
	default = current

[rerere]
	enabled = true

[gitbutler]
	aiModelProvider = anthropic
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
